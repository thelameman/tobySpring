<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.distance.app.persistence.TestDAO"> <!-- 인터페이스 이름과 루트랑 똑같게 만들자  -->
	<select id="selectList" resultType="Pt">
		SELECT * FROM property_Test order by propertyNo asc
	</select>

	<insert id="insertMap" parameterType="Pt">
		INSERT INTO property_map VALUES(
		#{propertyNo}, 'SErealtor', #{address}, #{propertyType} ,
		#{buildType}, #{price}, #{monthfee},#{area},#{land_area},#{lati},#{longti},#{floor},#{danji}
		<if test="picNo != 0">
		,#{picNo}
		</if>
		<if test="picNo == 0">
		, null
		</if>
		)
	</insert>

	<update id="updateMap" parameterType="Pt">
		UPDATE property_map SET name = #{danji}, address=#{address}  WHERE propertyNo = #{propertyNo}
	</update>
	
	<insert id="insertDetail" parameterType="Pt">
		INSERT INTO property_detail VALUES(
			#{propertyNo}, SYSDATE , #{content} , #{builtYear}, #{clickCount}
		)
	</insert>
	
</mapper>